# -*- restclient -*-
#
# Add a new attributo (just a string)
POST http://localhost:5000/api/attributi
Content-Type: application/json

{
  "name": "somestring",
  "description": "a plain string",
  "associatedTable": "run",
  "type": {
    "type": "string"
  }
}

# Add a new attributo (number with unit and range)
POST http://localhost:5000/api/attributi
Content-Type: application/json

{
  "name": "somenumber",
  "description": "a number with a range",
  "associatedTable": "chemical",
  "type": {
    "type": "number",
    "format": "standard-unit",
    "suffix": "MHz",
    "minimum": 3
  }
}

# Retrieve all attributi
GET http://localhost:5000/api/attributi

# Remove the attributo
DELETE http://localhost:5000/api/attributi
Content-Type: application/json

{
  "name": "foo"
}

# Add a new attributo
PATCH http://localhost:5000/api/attributi
Content-Type: application/json

{
  "nameBefore": "foo",
  "newAttributo": {
    "name": "bar",
    "description": "bar",
    "associatedTable": "run",
    "type": {
      "type": "string"
    }
  }
}

# Add a new chemical
POST http://localhost:5000/api/chemicals
Content-Type: application/json

{
  "name": "firstchemical",
  "attributi": {
  }
}

# Retrieve all chemicals
GET http://localhost:5000/api/chemicals

# Update a new chemical
POST http://localhost:5000/api/chemicals
Content-Type: application/json

{
  "id": 1,
  "name": "firstchemical",
  "attributi": {
    "somenumber": 3.5
  }
}
